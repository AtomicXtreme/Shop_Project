{% extends '@layout/default.html.twig' %}

{% block title %}Shoping Cart{% endblock %}
{% block page_title %}{% endblock %}

{% block body_class %}product-cart{% endblock %}

{% block content %}
<div class="container">
    {% if products is not empty %}
    <h1>Products in cart</h1>
        <table class="table">
            <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Product Name</th>
                <th scope="col">Quantity</th>
                <th scope="col">Price</th>
                <th scope="col">Total</th>
                <th scope="col">Action</th>
            </tr>
            </thead>
            <tbody>
            {% set count = 1 %}
            {% for product in products %}
            <tr>
                <th scope="row">{{ count }}</th>
                <td>{{ product['name'] }}</td>
                <td>{{ product['nr'] }}</td>
                <td>{{ product['price'] }}</td>
                <td>{{ product['price'] * product['nr'] }}</td>
                <td>
                <button class="removeFromCart" value="{{ product['uuid'] }}">Remove</button>
                </td>
            </tr>
                {% set count = count + 1 %}
            {% endfor %}
            <tr>
                <td></td>
                <td></td>
                <td></td>
                <td>Total Price:</td>
                <td>{{ total }}</td>
                <td> <button class="emptyCart">Empty Cart</button></td>
            </tr>
            </tbody>
        </table>
        <button class="order">Place Order!</button>
        {% else %}
            <h1>Your shoping cart is empty!</h1>
    {% endif %}

{% endblock %}
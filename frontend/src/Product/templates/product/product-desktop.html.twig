{% extends '@layout/default.html.twig' %}

{% block title %}Desktop Pc{% endblock %}
{% block page_title %}{% endblock %}

{% block body_class %}product-desktop{% endblock %}

{% block content %}
    <div class="container">
        <h1>Desktop Pc</h1>
        <div class="row">
            {% set i = 0 %}
            {% if desk is not empty %}
                {% for desktop in desk %}
                    <div class="col-md-4 d-flex">
                        <div class="card mb-4 w-100">
                            <img class="rounded mx-auto d-block" src="/images/app/product/{{ desktop.img }}.png"
                                 alt="Product Image" height="200px" width="200px">
                            <div class="card-body d-flex flex-column">
                                <a href="{{ path('product', {'action' : 'detail' , 'uuid' : desktop.uuid.toString() } ) }}">
                                    <h3>{{ desktop.title|e }}</h3>
                                </a>
                                <p>Description:</p>
                                <p class="card-text">{{ desktop.description|e }}</p>
                                <p class="card-text" style="font-weight: bold; color: black;font-size: 1.2vw">
                                    Price: {{ desktop.price|e }} $</p>
                                {% if stocks[i] != 0 %}
                                    <button data-id="{{ desktop.uuid.toString() }}" type="button"
                                            class="btn btn-success mt-auto ml-5 mr-5 addToCart">
                                        <i class="fas fa-shopping-cart"></i> Add to cart
                                    </button>
                                {% else %}
                                    <button type="button" class="btn btn-danger mt-auto ml-5 mr-5" disabled>
                                        <i class="fas fa-shopping-cart"></i> Out of Stock
                                    </button>
                                {% endif %}
                            </div>
                        </div>
                    </div>
                    {% set i = i + 1 %}
                {% endfor %}
            {% endif %}
        </div>
    </div>
{% endblock %}